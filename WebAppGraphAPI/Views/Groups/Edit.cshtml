@model Microsoft.Azure.ActiveDirectory.GraphClient.Group

@{
    ViewBag.Title = "Edit Group";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Group</h2>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Group</legend>
            <div class="editor-label">
                @Html.LabelFor(model => model.DisplayName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.DisplayName)
                @Html.ValidationMessageFor(model => model.DisplayName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.MailNickname)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.MailNickname)
                @Html.ValidationMessageFor(model => model.MailNickname)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.SecurityEnabled)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.SecurityEnabled)
                @Html.ValidationMessageFor(model => model.SecurityEnabled)
            </div>

            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@if (ViewBag.ErrorMessage == "AuthorizationRequired")
{
    <p>You have to sign-in. Click @Html.ActionLink("here", "Edit", "Groups", new { reauth = true }, null) to sign-in.</p>
}
