@model Microsoft.Azure.ActiveDirectory.GraphClient.User

@{
    ViewBag.Title = "Edit User";
}

<h2>Edit User</h2>

@using (Html.BeginForm("Edit",
        "Users",
        new { id = Model != null? Model.ObjectId : ""},
        FormMethod.Post,
        new { enctype = "multipart/form-data" })
) {
    @Html.ValidationSummary(true)

    <fieldset>
